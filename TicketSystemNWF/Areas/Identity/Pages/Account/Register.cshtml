@page
@model RegisterModel

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/css/style.css">
}
<div class="row">
    
    <!-- Sign up form -->
    <section class="signup">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <div class="form-group">
                            <label asp-for="Input.FirstName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="Input.FirstName" type="text" id="name" placeholder="Your Name" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.LastName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="Input.LastName" type="text" id="name" placeholder="Your Surname" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="Input.Email" type="email" id="email" placeholder="Your Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"><i class="zmdi zmdi-lock"></i></label>
                            <input asp-for="Input.Password" type="password" id="pass" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input asp-for="Input.ConfirmPassword" type="password" id="re_pass" placeholder="Repeat your password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                        </div>
                        <div class="form-group">
                            <input type="submit"  value="Register" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
                    <a asp-page="/Account/Login" class="signup-image-link">I am already member</a>
                </div>
            </div>
    </section>
</div>

